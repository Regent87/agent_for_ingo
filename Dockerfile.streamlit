# Dockerfile.streamlit
FROM python:3.12-slim

WORKDIR /app

# Устанавливаем зависимости
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Копируем UI
COPY chat_ui_a2a.py .
COPY .env .

# Порт Streamlit
EXPOSE 8501

# Запуск Streamlit
CMD ["streamlit", "run", "chat_ui_a2a.py", "--server.port=8501", "--server.address=0.0.0.0"]